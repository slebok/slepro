number__(Val1+Val2)
 -->
  bits__(Len1-1, Len1, Val1),
  rest__(Val2).

bits__(Pos, 1, Val)
 -->
  bit__(Pos, Val).

bits__(Pos0, Len1+1, Val1+Val2)
 -->
  bit__(Pos0, Val1),
  bits__(Pos0-1, Len1, Val2).

bit__(_Pos, 0)
 -->
  ['0'].

bit__(Pos, 2^Pos)
 -->
  ['1'].

rest__(0)
 -->
  [].

rest__(Val)
 -->
  ['.'],
  bits__(-1, _Len, Val).
