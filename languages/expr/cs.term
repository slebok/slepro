% A grammar for simple expression
grammar(

  % Nonterminals of the grammar
  [nat, expr],

  % Production rules of the grammar
  [
    rule(zero, nat, [t(zero)]),
    rule(succ, nat, [t(succ), t('('), n(nat), t(')')]),
    rule(const, expr, [n(nat)]),
    rule(add, expr, [n(expr), t('+'), n(expr)])
  ]
).
